{
  "compilerOptions": {
    "skipLibCheck": true,
    "strict": true,
    "outDir": "dist",
    "baseUrl": "src",
    "sourceMap": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
  },
  "include": ["**/*.ts", "src/*.ts"],
  "exclude": ["node_modules"]
}
